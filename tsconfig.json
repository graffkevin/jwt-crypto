{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*"]
}
